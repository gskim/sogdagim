{
  "name": "@sogdagim/api",
  "private": true,
  "version": "1.0.0",
  "description": "속닥임 api",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "tslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@sogdagim/orm": "^1.0.0",
    "@nestjs/common": "7.0.7",
    "@nestjs/core": "7.0.7",
    "@nestjs/platform-express": "7.0.7",
    "reflect-metadata": "0.1.13",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/typeorm": "7.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "6.5.5",
    "jsonwebtoken": "8.5.1",
    "dotenv": "4.0.0",
    "module-alias": "2.2.2",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@types/dotenv": "^4.0.2",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.1",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "jest": "^25.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.7.5",
    "tslint": "6.1.1",
    "tslint-eslint-rules": "5.4.0"
  },
  "_moduleAliases": {
    "@sogdagim/orm": "node_modules/@sogdagim/orm/dist",
    "@sogdagim/model": "node_modules/@sigdagim/orm/dist",
    "@controllers": "dist/controllers",
    "@repositories": "dist/repositories",
    "@representors": "dist/representors",
    "@services": "dist/services",
    "@middlewares": "dist/middlewares",
    "@utils": "dist/utils",
    "typeorm": "node_modules/@sogdagim/orm/node_modules/typeorm",
    "class-transformer": "node_modules/@sogdagim/orm/node_modules/@sogdagim/model/node_modules/class-transformer",
    "class-validator": "node_modules/@sogdagim/orm/node_modules/@sogdagim/model/node_modules/class-validator"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
